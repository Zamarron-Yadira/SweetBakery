@model SweetBakery.Models.ViewModels.RecetaViewModel
@{
    Layout = "Layout";
}

        <section id="receta">
            <h1 id="nombre">@Model.Nombre</h1>
            <img src="~/Imagenes/recetas/@(Model.Id).png" id="imagen" />
            <p id="resena">@Model.Reseña</p>
            <div>
                <h3>Ingredientes</h3>
                <p id="ingredientes">
                    @Html.Raw(Model.Ingredientes?.Replace("\n","<br />"))
                </p>
            </div>
            <div>
                <h3>Procedimiento</h3>
                <p id="procedimiento">
                    @Html.Raw(Model.Procedimiento?.Replace("\n","<br />"))
                </p>
            </div>
        </section>

        <aside>
            <h2>Más Recetas</h2>

            @foreach (var item in Model.Recetas)
            {
                <a href="~/Home/Receta/@Model.Id">
                    <div>
                        <img src="~/Imagenes/recetas/@(Model.Id).png" />
                    </div>
                    <h3>@Model.Nombre</h3>
                </a>
            }
        </aside>
